<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:clipToPadding="false">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp"
        app:strokeColor="?attr/colorOutline"
        app:strokeWidth="1dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Эквалайзер"
                android:textSize="22sp"
                android:textColor="?attr/colorOnSurface"
                android:fontFamily="@font/evolventa"
                android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
                android:layout_marginBottom="16dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <TextView
                    android:id="@+id/band1Label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="60 Hz"
                    android:textSize="14sp"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:fontFamily="@font/evolventa"
                    android:layout_weight="1"
                    android:gravity="center_vertical"/>

                <com.google.android.material.slider.Slider
                    android:id="@+id/band1SeekBar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:valueFrom="-15"
                    android:valueTo="15"
                    android:value="0"
                    app:trackColorActive="?attr/colorPrimary"
                    app:trackColorInactive="?attr/colorSurfaceVariant"
                    app:thumbColor="?attr/colorPrimary"
                    app:haloColor="?attr/colorPrimaryContainer"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <TextView
                    android:id="@+id/band2Label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="230 Hz"
                    android:textSize="14sp"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:fontFamily="@font/evolventa"
                    android:layout_weight="1"
                    android:gravity="center_vertical"/>

                <com.google.android.material.slider.Slider
                    android:id="@+id/band2SeekBar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:valueFrom="-15"
                    android:valueTo="15"
                    android:value="0"
                    app:trackColorActive="?attr/colorPrimary"
                    app:trackColorInactive="?attr/colorSurfaceVariant"
                    app:thumbColor="?attr/colorPrimary"
                    app:haloColor="?attr/colorPrimaryContainer"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <TextView
                    android:id="@+id/band3Label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="910 Hz"
                    android:textSize="14sp"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:fontFamily="@font/evolventa"
                    android:layout_weight="1"
                    android:gravity="center_vertical"/>

                <com.google.android.material.slider.Slider
                    android:id="@+id/band3SeekBar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:valueFrom="-15"
                    android:valueTo="15"
                    android:value="0"
                    app:trackColorActive="?attr/colorPrimary"
                    app:trackColorInactive="?attr/colorSurfaceVariant"
                    app:thumbColor="?attr/colorPrimary"
                    app:haloColor="?attr/colorPrimaryContainer"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <TextView
                    android:id="@+id/band4Label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="3.6 kHz"
                    android:textSize="14sp"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:fontFamily="@font/evolventa"
                    android:layout_weight="1"
                    android:gravity="center_vertical"/>

                <com.google.android.material.slider.Slider
                    android:id="@+id/band4SeekBar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:valueFrom="-15"
                    android:valueTo="15"
                    android:value="0"
                    app:trackColorActive="?attr/colorPrimary"
                    app:trackColorInactive="?attr/colorSurfaceVariant"
                    app:thumbColor="?attr/colorPrimary"
                    app:haloColor="?attr/colorPrimaryContainer"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/band5Label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="14 kHz"
                    android:textSize="14sp"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:fontFamily="@font/evolventa"
                    android:layout_weight="1"
                    android:gravity="center_vertical"/>

                <com.google.android.material.slider.Slider
                    android:id="@+id/band5SeekBar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:valueFrom="-15"
                    android:valueTo="15"
                    android:value="0"
                    app:trackColorActive="?attr/colorPrimary"
                    app:trackColorInactive="?attr/colorSurfaceVariant"
                    app:thumbColor="?attr/colorPrimary"
                    app:haloColor="?attr/colorPrimaryContainer"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Усилитель Bass"
                android:textSize="16sp"
                android:textColor="?attr/colorOnSurface"
                android:fontFamily="@font/evolventa"
                android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                android:layout_marginBottom="8dp"/>

            <com.google.android.material.slider.Slider
                android:id="@+id/bassBoostSeekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:valueFrom="0"
                android:valueTo="100"
                android:value="50"
                app:trackColorActive="?attr/colorPrimary"
                app:trackColorInactive="?attr/colorSurfaceVariant"
                app:thumbColor="?attr/colorPrimary"
                app:haloColor="?attr/colorPrimaryContainer"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp"
        app:strokeColor="?attr/colorOutline"
        app:strokeWidth="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:weightSum="3">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonHighs"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="Высокие"
                    android:textColor="?attr/colorOnSurface"
                    android:fontFamily="@font/evolventa"
                    app:strokeColor="?attr/colorOutline"
                    app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.SmallComponent"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonLows"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="Низкие"
                    android:textColor="?attr/colorOnSurface"
                    android:fontFamily="@font/evolventa"
                    app:strokeColor="?attr/colorOutline"
                    app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.SmallComponent"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonClear"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Чистый"
                    android:textColor="?attr/colorOnSurface"
                    android:fontFamily="@font/evolventa"
                    app:strokeColor="?attr/colorOutline"
                    app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.SmallComponent"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="match_parent"
                android:weightSum="3">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonSmooth"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="Гладкий"
                    android:textColor="?attr/colorOnSurface"
                    android:fontFamily="@font/evolventa"
                    app:strokeColor="?attr/colorOutline"
                    app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.SmallComponent"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonDynamic"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="Динамичный"
                    android:textColor="?attr/colorOnSurface"
                    android:fontFamily="@font/evolventa"
                    app:strokeColor="?attr/colorOutline"
                    app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.SmallComponent"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonStandard"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Стандартный"
                    android:textColor="?attr/colorOnSurface"
                    android:fontFamily="@font/evolventa"
                    app:strokeColor="?attr/colorOutline"
                    app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.SmallComponent"/>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>